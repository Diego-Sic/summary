{
    "manifest_version": 3, 
    "name": "TL; DR - Highlight and Summarize",
    "version": "1.0",

    "background": {
        "service_worker": "background.js"
    }, 
    "action": {
        "default_popup": "popup.html"
    }, 
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]
}